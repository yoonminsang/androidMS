<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:text="회원가입"
                    android:textSize="70dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ed_signup_name"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_columnSpan="2"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_columnSpan="2"
                    android:layout_width="200dp"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월일"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner_month"
                    android:layout_width="95dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" />

                <Spinner
                    android:id="@+id/spinner_day"
                    android:layout_width="95dp"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner_gender"
                    android:layout_width="200dp"
                    android:layout_columnSpan="2"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ed_signup_id"
                    android:layout_width="200dp"
                    android:layout_columnSpan="2"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ed_signup_password"
                    android:layout_width="200dp"
                    android:layout_columnSpan="2"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ed_signup_password_confirm"
                    android:layout_width="200dp"
                    android:layout_columnSpan="2"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2차 비밀번호 질문"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner_question"
                    android:layout_width="200dp"
                    android:layout_columnSpan="2"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2차 비밀번호 답변"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ed_signup_answer"
                    android:layout_width="200dp"
                    android:layout_columnSpan="2"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />
            </GridLayout>

            <Button
                android:id="@+id/bt_signup_confirm"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="확인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>